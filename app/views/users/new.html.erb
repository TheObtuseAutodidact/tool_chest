<h2>Create an Account!</h2>

<%= form_for(@user) do |f| %>

  <%= f.label :username %>
  <%= f.text_field :username %></br>

  <%= f.label :password %>
  <%= f.text_field :password %></br>

  <%= f.label :password_confirmation %>
  <%= f.text_field :password_confirmation %></br>

  <%= f.submit "Create Account" %>

<% end %>
